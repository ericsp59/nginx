apt install -y build-essential
apt-get install libssl-dev libcrypto++-dev
apt install libperl-dev
apt-get install libpcre3 libpcre3-dev
wget https://nginx.org/download/nginx-1.20.1.tar.gz
tar -zxvf nginx-1.20.1.tar.gz
wget https://www.openssl.org/source/openssl-1.1.1k.tar.gz
tar -zxvf openssl-1.1.1k.tar.gz
wget http://deb.debian.org/debian/pool/main/z/zlib/zlib_1.2.8.dfsg.orig.tar.gz
tar -zxvf zlib_1.2.8.dfsg.orig.tar.gz
cd nginx-1.20.1/
  
./configure
--sbin-path=/usr/bin/nginx \
--conf-path=/etc/nginx/nginx.conf \
--pid-path=/var/run/nginx.pid \
--error-log-path=/var/log/nginx/error.log \
--http-log-path=/var/log/nginx/access.log \
--with-stream_ssl_preread_module \
--with-stream \
--with-stream_realip_module \
--with-stream_ssl_module \
--with-debug --with-pcre \
--with-http_ssl_module \
--with-http_realip_module \
--with-http_geoip_module \
--with-http_gzip_static_module \
--with-http_auth_request_module \
--with-http_v2_module \
--with-http_perl_module \
--with-openssl=/root/openssl-1.1.1k/ \
--with-zlib=/root/zlib-1.2.8 \
--with-http_image_filter_module=dynamic \
--modules-path=/etc/nginx/modules

make
make install

cd /etc/init.d/
https://gist.githubusercontent.com/tonyc/1405605/raw/c8e4fc84ec75a174fc9ea38f003529fd42fce826/gistfile1.txt
cp gistfile1.txt nginx
chmod +x nginx
update-rc.d -f nginx defaults
echo "NGINX_CONF_FILE=/etc/nginx/nginx.conf" > /etc/default/nginx
echo "DAEMON=/usr/bin/nginx" >> /etc/default/nginx
service nginx start



